<odoo>
    <record id="view_student_tree" model="ir.ui.view">
        <field name="name">academy.student.tree</field>
        <field name="model">academy.student</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="age"/>
                <field name="course_id"/>
                <field name="course_cost"/>
            </list>
        </field>
    </record>

    <record id="view_student_form" model="ir.ui.view">
        <field name="name">academy.student.form</field>
        <field name="model">academy.student</field>
        <field name="arch" type="xml">
            <form string="Alumno">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="course_id"/>
                        <field name="course_cost" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_academy_students" name="Alumnos" parent="menu_academy_root" action="action_students"/>

    <record id="action_students" model="ir.actions.act_window">
        <field name="name">Alumnos</field>
        <field name="res_model">academy.student</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
